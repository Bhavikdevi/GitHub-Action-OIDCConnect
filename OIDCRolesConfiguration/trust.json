{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Federated": "arn:aws:iam::682711786845:oidc-provider/token.actions.githubusercontent.com"
        },
        "Action": "sts:AssumeRoleWithWebIdentity",
        "Condition": {
          "StringEquals": {
            "token.actions.githubusercontent.com:sub": [
              "repo:Bhavikdevi/GitHub-Action-OIDCConnect:pull_request",
              "repo:Bhavikdevi/GitHub-Action-OIDCConnect:ref:refs/heads/main"
            ],
            "token.actions.githubusercontent.com:aud": "sts.amazonaws.com"
          }
        }
      }
    ]
  }